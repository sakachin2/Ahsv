<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainFrame"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
        <LinearLayout                                              
             android:layout_height="wrap_content"                   
             android:layout_width="fill_parent"                   
             android:orientation="vertical"                      
	         android:layout_weight="1"
        >
            <LinearLayout                                          
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"              
                 android:orientation="vertical"                    
            >                                                      
	            <FrameLayout
                     android:id="@+id/BoardPanel"                   
    	             android:layout_width="fill_parent"
        	         android:layout_height="wrap_content"
            	     android:orientation="vertical"                
            	>                                                  
                </FrameLayout>
        	</LinearLayout> <!-- board -->
<!-- **comment & command*** -->                                    
            <LinearLayout                                          
                 android:layout_height="wrap_content"              
                 android:layout_width="fill_parent"
                 android:orientation="vertical"                    
                 android:background="#ff404040"
	        	 android:layout_weight="1"
            >                                                      
<!-- **comment Panel ** -->
	            <FrameLayout
                     android:id="@+id/CommentPanel"
    	             android:layout_width="fill_parent"
        	         android:layout_height="wrap_content"
            	     android:orientation="vertical"                
		        	 android:layout_weight="1"
            	>                                                  
<!-- Allcomment -->
                    <ScrollView                                    
                         android:layout_width="fill_parent"        
                         android:layout_height="wrap_content"      
                         android:fillViewport="true"
                         android:id="@+id/AllComments"
                         android:visibility="gone"
                    >                                              
                        <TextView
                             android:id="@+id/TextArea1"             
                             android:layout_width="fill_parent"    
                             android:layout_height="wrap_content"  
                             android:text="AllComment"
                             android:editable="false"
                        />                                         
                    </ScrollView>                                  
                </FrameLayout>
        	</LinearLayout> <!-- comment-->
<!-- buttons at bottom-->
            <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
            >
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                >
                    <Button
                        android:id="@+id/ChangeBoard"
                        android:layout_width="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:text="@string/ChangeBoard"
                        android:layout_weight="1"
    	                android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/ChangePiece"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/ChangePiece"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/Options"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/Options"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/WiFiNFCButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/WiFiNFCButton"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/BTNFCButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/BTNFCButton"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />          <!--1Ad3-->
                </LinearLayout>
               <!-- Casting-->
                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                >
                    <LinearLayout
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                    >
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/shogi_fu_b_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/FuB"
                        />                                         
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/shogi_kaku_b_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/KakuB"
                        />                                         
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/shogi_keima_b_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/KeimaB"
                        />                                         
                    </LinearLayout>
                    <LinearLayout
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                    >
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/shogi_fu_w_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/FuB"
                        />                                         
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/shogi_kaku_w_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/KakuW"
                        />                                         
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/shogi_keima_w_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/KeimaW"
                        />                                         
                    </LinearLayout>
                    <LinearLayout
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                    >
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/chess_pawn_w_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/PawnW"
                        />                                         
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/chess_bishop_w_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/BishopW"
                        />                                         
                        <ImageView
                             android:layout_width="30dp"
                             android:layout_height="20dp"
                             android:src="@drawable/chess_knight_w_up"
                        />                                         
                        <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="20dp"
                             android:text="@string/KnightW"
                        />                                         
                    </LinearLayout>
                                                                   
                </LinearLayout> <!-- piece-->

                <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                >
                    <Button
                        android:id="@+id/LocalGame"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/LocalGame"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/RemoteGame"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/RemoteGame"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/RemoteIP"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/RemoteIP"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
                    <Button
                        android:id="@+id/WiFiDirectButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/WiFiDirectButton"
                     android:visibility="gone"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />    <!--1A90-->
                    <Button
                        android:id="@+id/Help"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/Help"
                        android:layout_weight="1"
            android:background="@android:drawable/btn_default_small"
                    />
                </LinearLayout>
            </LinearLayout> <!-- 2line button -->
    	</LinearLayout>
</LinearLayout>

