                        />                                         
                        <ImageView
                             android:id="@+id/Captured15"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured16"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured17"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured18"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured19"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                    </LinearLayout>  <!--CapturedList1-->
                    <LinearLayout
	                 	android:id="@+id/CapturedList2"                  
                         android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                         android:orientation="horizontal"
	                     android:layout_alignParentBottom="true"
                    >
                        <TextView
                             android:id="@+id/CapturedL"           
                             android:layout_width="wrap_content"
                             android:layout_height="16dp"
                             android:text="B:"
                            	android:textSize="8sp"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured21"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
