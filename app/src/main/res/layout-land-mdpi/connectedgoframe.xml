                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured26"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured27"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured28"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                        <ImageView
                             android:id="@+id/Captured29"           
                             android:layout_width="30dp"
                             android:layout_height="16dp"
                             android:src="@drawable/shogi_fu_b_up"
                                 android:visibility="gone"
                        />                                         
                    </LinearLayout>  <!--CapturedList2-->
    <!-- comment panel -->
                    <LinearLayout                      
	                 	android:id="@+id/Comments"                  
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent"
                         android:orientation="vertical"
	                    android:background="#ff404040"
			             android:layout_below="@id/CapturedList1"
			             android:layout_above="@id/CapturedList2"
                    >                                    
                        <FrameLayout
                             android:id="@+id/CommentPanel"
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"        
                             android:layout_weight="1"
                             android:layout_alignParentTop="true"
                        >                                          
    <!-- Comment -->
                            <ScrollView                            
                                 android:layout_width="fill_parent"
                                 android:layout_height="wrap_content"
                                 android:fillViewport="true"
                                 android:id="@+id/CommentScrollView"
                            >                                      
                                <TextView
                                     android:id="@+id/Comment"     
                                     android:layout_width="fill_parent"
                                     android:layout_height="wrap_content"
                                     android:text="Comment"
                                     android:editable="false"
                                />                                 
                            </ScrollView>                          
                        </FrameLayout>
                    </LinearLayout>     <!-- Comments -->
            	</RelativeLayout>       <!-- Right Middle -->
            </LinearLayout>           <!-- RightMiddle-->
    	</RelativeLayout>           <!-- Right -->
	</LinearLayout>     <!-- landscape left/right -->
</LinearLayout>
