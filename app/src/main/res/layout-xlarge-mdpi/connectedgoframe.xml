                                 android:src="@drawable/shogi_fu_b_up"
                                     android:visibility="invisible"
                            />                                 
                            <ImageView
                                 android:id="@+id/Captured28"   
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:src="@drawable/shogi_fu_b_up"
                                     android:visibility="invisible"
                            />                                 
                            <ImageView
                                 android:id="@+id/Captured29"   
                                 android:layout_width="30dp"
                                 android:layout_height="30dp"
                                 android:src="@drawable/shogi_fu_b_up"
                                     android:visibility="invisible"
                            />                                 
                        </LinearLayout>  <!--CapturedList2-->
            <!-- comments -->                        
                        <LinearLayout                              
                             android:layout_height="wrap_content"  
                             android:layout_width="fill_parent"
                             android:orientation="vertical"        
                             android:background="#ff404040"
                                     android:layout_below="@id/CapturedList1"
                                     android:layout_above="@id/CapturedList2"
                        >                                          
            <!-- **comment Panel ** -->
                            <FrameLayout
                                 android:id="@+id/CommentPanel"
                                 android:layout_width="fill_parent"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical"    
                            >                                      
            <!-- Comment -->
                                <ScrollView                        
                                     android:layout_width="fill_parent"
                                     android:layout_height="wrap_content"
                                     android:fillViewport="true"
                                     android:id="@+id/CommentScrollView"
                                >                                  
                                    <TextView
                                         android:id="@+id/Comment" 
                                         android:layout_width="fill_parent"
                                         android:layout_height="wrap_content"
                                         android:text="Comment"
                                         android:editable="false"
                                    />                             
                                </ScrollView>                      
                            </FrameLayout>
                        </LinearLayout> <!-- comment-->
                    </RelativeLayout>   <!--Capture-->                
                                                                   
                </LinearLayout> <!--Middle-->
            </RelativeLayout><!--UnderBoard-->
        </LinearLayout> <!-- UnderBoard -->
</LinearLayout>

